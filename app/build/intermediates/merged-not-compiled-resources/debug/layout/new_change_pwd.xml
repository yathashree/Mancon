<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="#EC1E26"
        android:orientation="horizontal">

        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:typeface="serif"
            android:text="@string/text_change"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
    android:layout_margin="@dimen/change_margin"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="@string/default_password"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edit_default"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:typeface="serif"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/edittextstyle"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="@string/new_password"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edit_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:typeface="serif"
                android:background="@drawable/edittextstyle"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="@string/confirm_password"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edit_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittextstyle"
                android:textColor="#000000"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:typeface="serif"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.4"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/text_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/onetimepassword"
                android:typeface="serif"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/edit_otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittextstyle"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_margin="2dp"
                android:typeface="serif"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_weight="0.04"
            android:layout_gravity="center"
            >

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_align"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size"
                android:typeface="serif"
                android:textStyle="bold"
                android:text="SUBMIT" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>