<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="@dimen/margin_ten"
    android:orientation="vertical"
    tools:context=".ChecklistTypes">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="6"
        android:orientation="vertical">


        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:layout_margin="@dimen/margin_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView

                android:textColor="@color/text_color_black"
                android:id="@+id/ques_head"
                android:text="@string/question1"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:background="@drawable/sos_select"
                    android:textColor="@color/red"
                    android:id="@+id/btnyes1"
                    android:clickable="true"

                    android:text="@string/button_yes"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="11sp"
                    android:layout_width="@dimen/width_fourty"
                    android:layout_height="@dimen/height_fourty" />
                <Button
                    android:background="@drawable/sos_select"
                    android:textColor="@color/red"
                    android:id="@+id/btnno1"
                    android:text="@string/button_no"
                    android:clickable="true"

                    android:layout_margin="@dimen/margin_four"
                    android:textSize="11sp"
                    android:layout_width="@dimen/width_fourty"
                    android:layout_height="@dimen/height_fourty" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="5dp"

            android:background="@drawable/edittextstyle"
            android:layout_height="match_parent">

            <EditText
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/text_color_black"
                android:layout_weight="1"
                android:id="@+id/user_entry1"
                android:maxLines="3"
                android:textSize="@dimen/text_size"
                android:background="@null"
                android:textAlignment="viewStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <!--  <View
                  android:layout_width="2dp"
                  android:layout_height="match_parent"
                  android:background="#D3D4D5"/>-->
            <ImageButton
                android:background="@drawable/camera"
                android:textColor="@color/red"
                android:id="@+id/camera_clk1"
                android:text="@string/button_yes"
                android:layout_margin="@dimen/margin_four"
                android:layout_width="@dimen/width_fourty"
                android:layout_height="@dimen/height_fourty" />
            <ImageButton
                android:background="@drawable/calender"
                android:textColor="@color/red"
                android:id="@+id/cal"
                android:text="@string/button_no"
                android:layout_margin="@dimen/margin_four"
                android:layout_width="@dimen/width_fourty"
                android:layout_height="@dimen/height_fourty" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>