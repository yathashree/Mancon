<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/linear"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_ten"
    tools:context=".ChecklistTypes">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:weightSum="6"
        android:padding="@dimen/padding_two"
        android:orientation="vertical">


        <LinearLayout

            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView

                android:textColor="@color/text_color_black"
                android:id="@+id/with_camera"
                android:text="@string/question1"
                android:textSize="@dimen/text_size"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:background="@drawable/sos_select"
                    android:textColor="@color/red"
                    android:id="@+id/btnyes"
                    android:text="@string/button_yes"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/cal_text_size"
                    android:layout_width="@dimen/width_fourty"
                    android:layout_height="@dimen/height_fourty" />
                <Button
                    android:background="@drawable/sos_select"
                    android:textColor="@color/red"
                    android:id="@+id/btnno"
                    android:text="@string/button_no"
                    android:layout_margin="@dimen/margin_four"
                    android:textSize="@dimen/cal_text_size"
                    android:layout_width="@dimen/width_fourty"
                    android:layout_height="@dimen/height_fourty" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_margin="@dimen/margin_ten"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@drawable/edittextstyle"
            android:layout_height="match_parent">



        <TextView
                android:gravity="center_horizontal"

                android:textColor="@color/text_color_black"
                android:lines="3"
                android:inputType="textMultiLine"
                android:layout_weight="1"
                android:id="@+id/user_entry1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <!--  <View
                  android:layout_width="3dp"
                  android:layout_height="match_parent"
                  android:background="#D3D4D5"/>-->
            <!--<ImageButton-->
                <!--android:background="@drawable/camera"-->
                <!--android:layout_weight="0.5"-->
                <!--android:id="@+id/camera_clk"-->
                <!--android:layout_width="@dimen/width_fourty"-->
                <!--android:layout_height="@dimen/height_fourty" />-->


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
