<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_ten"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_two"
        android:weightSum="6">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView

                android:id="@+id/without_camera_ques"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_two"
                android:layout_weight="1"
                android:text="@string/question2"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/text_size" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_yes2"
                    android:layout_width="@dimen/width_fourty"
                    android:layout_height="@dimen/height_fourty"
                    android:layout_margin="@dimen/margin_four"
                    android:background="@drawable/daycheckliststyleno"
                    android:text="@string/button_yes"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/cal_text_size" />

                <Button
                    android:id="@+id/btn_no2"
                    android:layout_width="@dimen/width_fourty"
                    android:layout_height="@dimen/height_fourty"
                    android:layout_margin="@dimen/margin_four"
                    android:background="@drawable/daycheckliststyleno"
                    android:text="@string/button_no"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/cal_text_size" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_five"
            android:layout_weight="1"
            android:background="@drawable/edittextstyle"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/comment_save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:maxLines="3"
                android:padding="@dimen/padding_five"
                android:textAlignment="viewStart"
                android:textColor="@color/text_color_black" />

            <!--  <View
                  android:layout_width="2dp"
                  android:layout_height="match_parent"
                  android:background="#D3D4D5"/>-->
            <!-- <ImageButton
                 android:background="@drawable/camera"
                 android:textColor="@color/red"
                 android:id="@+id/camera_clk1"
                 android:text="@string/button_yes"
                 android:layout_margin="@dimen/margin_four"
                 android:textSize="11sp"
                 android:layout_width="@dimen/width_fourty"
                 android:layout_height="@dimen/height_fourty" />-->
            <ImageButton
                android:id="@+id/comment"
                android:layout_width="@dimen/width_fourty"
                android:layout_height="@dimen/height_fourty"
                android:layout_margin="@dimen/margin_four"
                android:background="@drawable/comment"
                android:text="@string/button_no"
                android:textColor="@color/red" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="0.5"
            android:background="@drawable/edittextstyle"
            android:hint="@string/enter_comment"
            android:maxLines="5"
            android:padding="@dimen/padding_ten"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/hint_grey"
            android:theme="@style/TextAlign" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/submit" />

    </LinearLayout>

</LinearLayout>